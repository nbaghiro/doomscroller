# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_STORAGE_BUCKET=your-bucket-name

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Video Generation API (choose one)
# Option 1: Vertex AI (native Veo 3)
VERTEX_AI_LOCATION=us-central1

# Option 2: Third-party provider (fal.ai or Replicate)
FAL_API_KEY=your-fal-api-key
REPLICATE_API_KEY=your-replicate-api-key

# YouTube API
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/oauth2callback

# Instagram API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_ACCESS_TOKEN=your-long-lived-access-token

# TikTok API
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Trending Topics APIs
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
GOOGLE_TRENDS_API_KEY=your-google-trends-api-key

# Monitoring
SLACK_WEBHOOK_URL=your-slack-webhook-url
ALERT_EMAIL=your-email@example.com
